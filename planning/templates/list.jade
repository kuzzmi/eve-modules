script.
    var markDone = function(index, cb) {
        cb.disabled = true;
        var row = $(cb).parent().parent();
        row.css({
            'color': '#939393',
            'text-decoration': 'line-through'
        });
        var total = row.parent().find('#total strong');
        setTimeout(function() {
            row.css('display', 'none');
            var tot = +(total.text());
            total.text(--tot);
        }, 1000);
        index++;
        window.socket.emit('input', 'Mark ' + getGetOrdinal(index) + ' as done');
    };
    function getGetOrdinal(n) {
       var s=["th","st","nd","rd"],
           v=n%100;
       return n+(s[(v-20)%10]||s[v]||s[0]);
    }

table
    thead
        tr
            th(style="width:5%;padding: 2px 5px;")
            th(style="width:20%;text-align:right;padding: 2px 5px;") Time
            th(style="width:75%;padding: 2px 5px;") Task
    tbody
        - for (var i = 0; i < list.length; i++)
            - var task = list[i]
            tr
                td(style="padding: 2px 5px;") 
                    input(type="checkbox", style="height:16px;width:15px;vertical-align: middle;",onclick="markDone(#{i}, this)")

                td(style="padding: 2px 5px;") 
                    if task.isOverdue
                        span(style="color:#ED7679") #{task.datetime}
                    else
                        span(style="color:#B1EC77") #{task.datetime}

                td(style="padding: 2px 5px;") #{task.content}
        tr
            td(colspan=2, style="text-align:right;padding: 2px 5px;") 
                strong Total
            td#total(style="padding: 2px 5px;") 
                strong #{list.length}
